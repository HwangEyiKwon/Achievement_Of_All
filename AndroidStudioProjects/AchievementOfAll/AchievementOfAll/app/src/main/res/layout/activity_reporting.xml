<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="520dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/round_background"
    tools:context=".Activities.LoginActivity">

    <TextView
        android:id="@+id/report_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/font5"
        android:layout_gravity="center"
        android:text="인증에 실패하셨습니다."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/report_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font5"
        android:text="실패를 인정하신다면 승인을 눌러주세요.\n타 유저를 신고하시려면 신고를 눌러주세요."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/icongrey"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:text="인증 실패 컨텐츠: "
            android:textColor="@color/colorPrimaryDark" />

        <!--TODO 여기엔 컨텐츠 네임 넣기-->
        <TextView
            android:id="@+id/fail_which_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font5"
        android:text="실패 체크자 명단"
        android:textColor="@color/colorPrimaryDark" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/rejectView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:scrollbars="vertical"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/font5"
                android:background="@drawable/round4"/>

        </LinearLayout>




    <EditText
        android:id="@+id/report_reason"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="신고 사유를 적어주세요."
        android:fontFamily="@font/font5"
        android:textColorHint="@color/icongrey"
        android:background="@drawable/round4"
        android:scrollbars="vertical"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/bt_accept"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:background="@drawable/mediatransperent_ract"
            android:text="승인"
            android:fontFamily="@font/font5"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/bt_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:background="@drawable/mediatransperent_ract"
            android:fontFamily="@font/font5"
            android:text="신고"
            android:textColor="@color/colorPrimaryDark" />

    </FrameLayout>




</LinearLayout>