<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_desc_3"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그렇다면,\n모두의 달성과 함께 하세요 !"
        android:fontFamily="@font/font5"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="45dp"
        android:gravity="center"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그 어떤 목표라도\n모두의 달성과 함께라면\n성취할 수 있습니다!"
        android:fontFamily="@font/font5"
        android:textColor="@color/icongrey"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최고의 목표달성 플랫폼!\n지금 바로 시작하세요!\n다양한 컨텐츠에 참여 해보세요!"
        android:fontFamily="@font/font5"
        android:textColor="@color/icongrey"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>