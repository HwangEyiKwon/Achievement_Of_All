<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:id="@+id/contents_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/id_contents_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/font5"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/font4"
                android:textColor="@color/colorPrimaryDark"
                android:text="내 정보"/>

        </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>



            <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calendarView"

                android:layout_width="250dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                app:mcv_selectionColor="#a9dbf0cb"
                app:mcv_showOtherDates="defaults"/>

        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/fab"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:scaleType="center"
            app:borderWidth="0dp"
            android:backgroundTint="@color/back"
            android:src="@drawable/ic_help"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp" />


        <LinearLayout android:orientation="vertical"

            android:id="@+id/fab_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:visibility="invisible"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout android:src="@drawable/speech_box"
                android:background="@drawable/speech_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_icons_start" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:text="시작일"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/font5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_icons_end" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:text="종료일"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/font5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_icons_check" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:text="인증 완료일"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/font5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_icons_notyet" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:text="다음 인증일"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/font5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_icons_wrong" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:text="인증 실패일"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/font5"/>
                </LinearLayout>


            </LinearLayout>

            <!--<ImageView android:src="@drawable/down_arrow_nor"-->
                <!--android:layout_width="30dip"-->
                <!--android:layout_height="30dip"-->
                <!--android:layout_gravity="center_horizontal" />-->

        </LinearLayout>





    </FrameLayout>



        <TextView
            android:id="@+id/contents_remaining_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="13dp"
            android:gravity="center"
            android:fontFamily="@font/font5"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="남은 인증시간" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/remaining_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font5"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/remaining_days_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/font5"
                    android:text=" 일  " />
                <TextView
                    android:id="@+id/remaining_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font5"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/remaining_hours_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/font5"
                    android:text=" 시간  " />
                <TextView
                    android:id="@+id/remaining_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font5"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/remaining_minutes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/font5"
                    android:text=" 분  " />

                <TextView
                    android:id="@+id/contents_over_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/font5"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:text="마지막 인증까지 완료하셨습니다."/>

                <TextView
                    android:id="@+id/contents_not_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/font5"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:text="컨텐츠 참여 전입니다."/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/go_to_video_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/font5"
                    android:background="@drawable/round2"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="인증하기" />

            </LinearLayout>

            <!--<SurfaceView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/surfaceView" />-->


        </LinearLayout>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>