<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parkseunghyun.achievementofall.HomeActivity"
    android:background="@color/apptool">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/back"-->
                <!--android:layout_marginTop="10dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Circle Image view library used-->

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/post_profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/selena"
                android:layout_marginStart="7dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"/>

            <customfonts.MyTextView_Roboto_Medium
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/alise"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>




        </LinearLayout>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fashion"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewgrey"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" My Contents"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/id_my_contents"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewgrey"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/apptool"
            android:layout_marginBottom="60dp">

            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" My Video Collection"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>

            <!--Recycler can be used-->

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/id_thumbnail"
                android:layout_marginStart="2dp"
                android:clipToPadding="false"
                android:paddingTop="2dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>


    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
